<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'ui large form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <div class='ui fluid left icon input'>
      <i aria-hidden="true" class="user icon"></i>
      <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
    </div>
  </div>

  <div class="field">
    <% if @minimum_password_length
      @placeholder = "Password (#{@minimum_password_length} characters minimum)"
    else
      @placeholder = "Password"
    end %>
    <div class='ui fluid left icon input'>
      <i aria-hidden="true" class="lock icon"></i>
    <%= f.password_field :password, autocomplete: "off", placeholder: @placeholder %>
  </div>
  </div>

  <div class="field">
    <div class='ui fluid left icon input'>
      <i aria-hidden="true" class="lock icon"></i>
      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "ui red large fluid button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
