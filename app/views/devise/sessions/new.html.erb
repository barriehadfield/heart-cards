<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {class:  'ui large form'}) do |f| %>
    <!-- <div class='ui segment basic'> -->
      <h1 class="ui header">Sign in to HEART
        <div class="sub header">Enter your details below or Sign Up</div>
      </h1>
    <!-- </div> -->
  </br>

    <div class="field">
      <div class='ui fluid left icon input'>
        <i aria-hidden="true" class="user icon"></i>
        <%= f.email_field :email, placeholder: 'Email', autofocus: true %>
      </div>
    </div>

    <div class="field">
      <div class='ui fluid left icon input'>
        <i aria-hidden="true" class="lock icon"></i>
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>
    </div>

    <!-- <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%> -->

    <div>
      <%= f.submit "Sign in", class: "ui purple large fluid button" %>
    </div>

    <%= render "devise/shared/links" %>

<% end %>
